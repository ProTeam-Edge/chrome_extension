
	{

		"manifest_version": 2,
		"name": "ProTeam Edge",
		"description": "Lorem ipsum, or lipsum as it is sometimes known, is dummy text used in laying out print, graphic or web designs. The passage is attributed to an unknown typesetter in the 15th century.",
		"version": "1.0.0",
		
		"icons": {

			"128": "/img/logo.png"

		},

		"browser_action": {

			"default_icon": "/img/logo.png",
			"default_popup": "/pages/popup/index.html"

		},

		"background": {

			"scripts": [

				"/lib/papaparse.min.js",
				"/lib/moment.min.js",
				"/lib/jquery.min.js",
				"/lib/webx.js",

				"/js/background/bg_controller.js",
				"/js/background/main.js"

			],
			"persistent": true

		},

		"content_scripts": [

			{

				"all_frames": false,

				"run_at": "document_start",

				"matches": [

					"https://drive.google.com/*",
					"https://mail.google.com/*"

				],

				"js": [

					"/lib/moment.min.js",
					"/lib/jquery.min.js",
					"/lib/webx.js",

					"/js/content_script/google_drive_converter.js",
					"/js/content_script/gmail_converter.js",
					"/js/content_script/main_converter.js",

					"/js/content_script/cs_controller.js",
					"/js/content_script/main.js"

				]

			}

		],

		"permissions": [

			"activeTab",
			"storage",
			"contextMenus",
			"webRequest",
			"webRequestBlocking",

			"https://docs.google.com/*",
			"https://*.googleusercontent.com/*"

		],

		"web_accessible_resources": [ "/*" ],
		"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

	}